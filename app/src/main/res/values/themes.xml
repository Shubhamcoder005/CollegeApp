<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CollegeApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/sky</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="action.bar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorOnPrimary">@color/sky</item>
        <!-- Secondary brand color. -->
        <item name="colorPrimary">@color/sky</item>
        <item name="colorOnSecondary">@color/sky</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sky</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SansFamilyText">

        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="Theme.CollegeApp" parent="Base.Theme.CollegeApp" />
